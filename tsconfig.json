{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", // Output compiled files to dist/
    "rootDir": "src", // Source code directory
    "declaration": true, // Generate .d.ts files for TypeScript users
    "declarationMap": true, // Allow source mapping for declarations
    "sourceMap": true, // Generate source maps for debugging
    "module": "ESNext", // Use ES module syntax
    "moduleResolution": "Node", // Resolve modules using Node.js rules
    "target": "ES2020", // Compile output to ES2020 for modern JS
    "strict": true, // Enable strict mode for better type checking
    "esModuleInterop": true, // Allow CommonJS/ES module compatibility
    "forceConsistentCasingInFileNames": true, // Prevent casing issues in imports
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"], // Include the src directory
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
